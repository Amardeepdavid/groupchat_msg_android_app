<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amardeep.groupchat.RegisterActivity">

    <include android:id="@+id/reg_appbar"
        layout="@layout/appbar_layout"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/reg_name"
        android:layout_weight="1"

        android:id="@+id/text"

        android:layout_marginTop="70dp"
        android:text="Create Your Account"
        android:textSize="15dp"
        android:fontFamily="serif"

        android:textColor="@color/colorPrimary"

        android:textStyle="bold"/>

    <EditText
        android:id="@+id/reg_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/reg_password"
        android:layout_alignStart="@+id/reg_password"
        android:layout_below="@+id/text"
        android:fontFamily="serif"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_background"
        android:hint="name"
        android:layout_weight="1"
        android:inputType="text"
        android:padding="10dp" />

    <EditText
        android:id="@+id/reg_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/reg_name"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_background"
        android:hint="email"
        android:fontFamily="serif"
        android:inputType="textEmailAddress"
        android:padding="10sp" />

    <EditText
        android:id="@+id/reg_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/reg_email"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:hint="@string/password"
        android:fontFamily="serif"
        android:layout_weight="1"
        android:inputType="textPassword"
        android:background="@drawable/input_background"
        android:padding="10sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/reg_password"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"

        android:id="@+id/confirm_password"
        android:inputType="textPassword"
        android:hint="@string/confirm_password"
        android:fontFamily="serif"
        android:layout_weight="1"
        android:background="@drawable/input_background"
        android:padding="10sp"/>

    <Button
        android:id="@+id/registerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/confirm_password"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:text="@string/create_account"
        android:layout_weight="1"
        android:textColor="#fff"
        android:textStyle="bold"
        android:padding="10sp"
        android:background="@drawable/btn_background"/>

</RelativeLayout>
